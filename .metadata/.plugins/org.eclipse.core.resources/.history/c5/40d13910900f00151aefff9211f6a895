############################################################
#
#    decorators
#
############################################################

def trace(fn):
    def enhance(obj,value):
        print "calling obj.{0}({1})".format(fn.func_name, value)
        return fn(obj, value)
    return enhance
    
    
class MyClass(object):
    def trace2(fn):
        def enhance(obj,value,fn=fn):
            print "calling obj.{0}({1})".format(fn.func_name, value)
            return fn(obj, value)
        return enhance
    
    
    def __init__(self, a):
        self.a = a
    
    def bar(self, fn):
        return fn
        
    def doit(self):
        print 'doit'

    @trace2
    def doit2(self):
        print 'doit2'
    
    
    @trace
    def add(self, b): 
        print "result of add is: ", self.a + b
        
m = MyClass(100)
m.add(25)
trace(m.add(25))

def g(): print "g"

m.bar(m.doit)()
z = m.trace2()
print z.func_name
z(g, 6)
print type(z)
1
