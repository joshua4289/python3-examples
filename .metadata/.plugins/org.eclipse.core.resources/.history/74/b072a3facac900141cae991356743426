############################################################
#
#    decorators
#
############################################################


def ff(xx):
    print "ff"
    
class foo(object):

    def __init__(self, msg):
        self.msg = msg

    def bar(self, f):
        def decor(x):
            print f
            print self.msg, x
        return decor
    @ff
    def xxx(self, f):
        def decor2():
            print "xxx:", self.msg
        return decor2
    def __call__(self=self):
        print "OK"
        
x = foo("foo")
y = foo("barry")


# @x.bar
# def f():
#     pass
# 
# @y.bar
# def g():
#     pass
# 
# 
# x.bar(f)(4)
# f(5)
# g(6)


x.xxx(5)
1
