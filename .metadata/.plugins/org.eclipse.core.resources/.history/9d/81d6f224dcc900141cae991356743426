##########################################################
#
#	Bitwise Operators
#
##########################################################

# Bitwise OR
$x = 0x5b4c;
$y = 0x00ff;
$z = $x | $y;
printf "%04X | %04X = %04X \n", $x, $y, $z;

# Bitwise AND
$x = 0x5b4c;
$y = 0x00ff;
$z = $x & $y;
printf "%04X & %04X = %04X \n", $x, $y, $z;

