##########################################################
#
#	Logical Operators
#
##########################################################

$x1 = 0;
$x2 = 1;
$y1 = 0;
$y2 = 1;

print "$x1 && $y1 = ", $x1 && $y1, "\n";
print "$x1 && $y2 = ", $x1 && $y2, "\n";
print "$x2 && $y1 = ", $x2 && $y1, "\n";
print "$x2 && $y2 = ", $x2 && $y2, "\n";

print "$x1 || $y1 = ", $x1 || $y1, "\n";
print "$x1 || $y2 = ", $x1 || $y2, "\n";
print "$x2 || $y1 = ", $x2 || $y1, "\n";
print "$x2 || $y2 = ", $x2 || $y2, "\n";

