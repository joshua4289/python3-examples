class Singleton:
    theInstance = None
    
    def __init__(self):
        raise Exception("can't create object")
    
    @classmethod
    def Create(cls):
        if Singleton.theInstance == None:
            
            Singleton.theInstance = Singleton()
        return Singleton.theInstance
    
    def whatsMyId(self):
        print id(self)
        

Singleton.__init__ = lambda self:None
x1 = Singleton.Create()
x2 = Singleton.Create()
x3 = Singleton.Create()
x4 = Singleton.Create()


x1.whatsMyId()
x2.whatsMyId()
x3.whatsMyId()
x4.whatsMyId()



