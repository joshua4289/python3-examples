class Point:
    def initialize(self, name, x0, y0):
        self.name = name
        self.x = x0
        self.y = y0
    def display(self):
        print "{:12s}[{},{}]".format(self.name, self.x, self.y)
    def moveBy(self, dx, dy):
        self.x += dx
        self.y += dy
    
######### use the class ##########
# create objects

p1 = Point()
p2 = Point()
p3 = Point()

#     initialize(self, name0,   x0, y0):
p1.initialize("wendy", 12, 10)
p2.initialize("peter", 22, 20)
p3.initialize("tinkerbell",  32, 30)
print p1.__class__
p1.moveBy(100, 100)
p2.moveBy(100, 100)
p3.moveBy(100, 100)
p1.display()
p2.display()
p3.display()
