def trace(fn):
    def enhance(obj,value):
        print locals()
        print "calling {0},{1},{2}".format(fn.func_name, obj.__dict__, value)
        print "calling " + fn.func_name + "(" + str(x) + ")"
        return fn(obj, value)
    return enhance
    

def ff(fn):
    print "ff"
    return fn


class MyClass(object):
    def __init__(self, a):
        self.a = a
        
    @trace
    def add(self, b): 
        print "", self.a + b
        
x = MyClass(4)
