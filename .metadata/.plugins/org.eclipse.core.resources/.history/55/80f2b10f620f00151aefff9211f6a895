############################################################
#
#    decorators
#
############################################################

def trace(fn):
    def enhance(obj,value):
        print "calling obj.{0}({1})".format(fn.func_name, value)
        return fn(obj, value)
    return enhance
    
    
class MyClass(object):
    x = 0
    def __init__(self, a):
        self.a = a
    
    def bar(self, fn):
        return fn
        
#     @x.bar
    def doit(self):
        pass
    
    @trace
    def add(self, b): 
        print "result of add is: ", self.a + b
        
m = MyClass(100)
m.add(25)
trace(m.add(25))

m.bar(m.doit)()
1
