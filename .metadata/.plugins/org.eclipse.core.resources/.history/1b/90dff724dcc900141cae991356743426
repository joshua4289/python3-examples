##########################################################
#
#	Two Dimensional Arrays
#
##########################################################

@matrix = ([ 0 ..  9],
           [10 .. 19],
           [20 .. 29],
           [30 .. 39]);

$matrix[2][3] = "--";

for ($i = 0; $i < 4; $i++) {
  for ($j = 0; $j < 10; $j++) {
    printf "%3s", "$matrix[$i][$j] ";
  }
  print "\n";
}

1