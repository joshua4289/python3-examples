from timeit import timeit
import math

def sum_1():
    sum = 0.0
    for r in range(10):
        # this is calculated many times
        pi = math.atan(1.0) / 4.0 
        sum = sum + pi * r**2

def sum_2():
    sum = 0.0
    pi = math.atan(1.0) / 4.0
    for r in range(10):
        sum = sum + pi * r**2
# sum_1()

def print_times(statement, initial, number):
    print "{}: {:8.3f}".format(statement, timeit(statement, initial, number=number))
    
print_times("sum_1()", "from __main__ import sum_1", number=1000000)
print_times("sum_2()", "from __main__ import sum_2", number=1000000)
