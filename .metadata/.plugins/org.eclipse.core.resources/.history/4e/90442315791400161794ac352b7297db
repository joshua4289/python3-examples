def N(d):
    return norm.cdf(d)


stockPrice = S = 31.55
timeUntilOptionExpiresInDays = t = 3.5 # * 365.25
strikePrice = K = 22.75
riskFreeInterestRate = r = 5.0
sigma = volitivity_as_percentage_per_annum = 50.0
cumulativeStandatdNormalDistribution = N = lambda d : norm.cdf(d)
d1 = ( np.log(S/K) + (r + sigma**2/2.0)*t ) / (sigma * t**0.5)
# d1 = ( np.log(S/K) ) / (sigma * t**0.5)
d2 = d1 - sigma * t**0.5
C = S * N(d1) - K * np.exp(-r*t) * N(d2)
# C = N(d1)
