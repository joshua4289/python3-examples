import numpy as np
import matplotlib.pyplot as plt
from skimage import data
from PIL import Image
from scipy import ndimage
from skimage.morphology import watershed
from scipy.ndimage.morphology import binary_fill_holes 

class Plotter:
    def __init__(self, plt, subplotTotal, title):
        self.plt = plt
        self.subplotTotal = subplotTotal
        self.figure = plt.gcf()
        self.figure.canvas.set_window_title(title)

    def plot(self, subplotNo, title, data):
        subPlot = self.figure.add_subplot(1, self.subplotTotal, subplotNo)
        subPlot.set_title(title)
        self.plt.imshow(data, interpolation = "none", cmap = "Greys")
    
    def publish(self):
        self.plt.show()
        
def loadImage(fileName):
    image = Image.open(fileName)
    image.load()
    data = np.asarray(image, dtype="int32" )
    return data

rice = loadImage("images/rice.jpg")
print rice.shape

n = 10
filter = rice[:,:,0] > n; 
rice[filter] = [255, 0, 0]
filter = rice[:,:,0] <= n; 
rice[filter] = [0, 0, 0]
figure = Plotter(plt, 4, "rice grains")
figure.plot(1, "raw", rice)
figure.publish()
exit()
rice_r = np.copy(rice)
mask = rice_r[:,:,0] > 0
rice_r[mask] = [0,0,0]
figure.plot(2, "raw (red)", rice_r[:,:,2])


figure.publish()
exit()
