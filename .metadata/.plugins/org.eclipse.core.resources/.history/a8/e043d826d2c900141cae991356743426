def ff(fn):
    print "ff"
    return fn


class foo(object):
    @ff
    def xxx(self, f):
        def decor2(a):
            print "calling " + fn.func_name + "(" + str(x) + ")"
            f(a)
        return decor2
        
x = foo()
x.xxx(5)
1
