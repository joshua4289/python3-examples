import numpy as np
import matplotlib.pyplot as plt
import PIL.Image as Image
import skimage.measure as measure
import skimage.morphology as morphology

def load_image( infilename ) :
    img = Image.open( infilename )
    img.load()
    data = np.asarray( img, dtype="int32" )
    return data

rice = load_image("images/rice.jpg")
print "Shape of raw image: {}".format(rice.shape)
rice = rice[:,:,0]
print "Shape of red image: {}".format(rice.shape)

rice[ rice[:,:] > 120 ] = 256
rice[ rice[:,:] <= 120 ] = 0
labels = measure.label(rice)
z = morphology.remove_small_objects(rice, min_size=16, connectivity=100, in_place=False)
plt.imshow(z, interpolation="none", cmap="gray")
plt.show()


labels = measure.label(z)
# print labels
props = measure.regionprops(labels, ['FilledArea', 'Label'])
print len(props)
