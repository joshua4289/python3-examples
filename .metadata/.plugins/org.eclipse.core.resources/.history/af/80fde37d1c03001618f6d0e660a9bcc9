from calculator import *
import unittest

class TestMyCalculatorClass(unittest.TestCase):
    """doc string"""
    def setUp(self):
        self.c = Calculator()
        
    def testWeCanAddFiveAndSixTogether(self):
        actual = self.c.add(5, 6)
        expected = 11
        self.assertEqual(expected, actual)
    
    def testWeCanSomeOtherNumbersTogether(self):
        actual = self.c.add(15, 7)
        expected = 22
        self.assertEqual(expected, actual)
    
    def testWeThrowAnExceptionIfTheFirstParameterIsAString(self):
        self.assertRaises(TypeError, self.c.add, "Hello", 7)
        
        