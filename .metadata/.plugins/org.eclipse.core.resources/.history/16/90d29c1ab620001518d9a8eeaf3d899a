############################################################
#
#    decorators
#
############################################################

def trace(fn):
    def enhance(obj,value):
        print "calling obj.{0}({1})".format(fn.func_name, value)
        return fn(obj, value)
    return enhance
    
    
class MyClass(object):
    def __init__(self, a):
        self.a = a
        self.text = ""
        
    #@trace
    def add(self, b): 
        print "result of add is: ", self.a + b

    @trace
    def addText(self, text):
        self.text += text + "\n"
    
    def display(self):
        print self.text


m = MyClass(100)
m.addText("line 1")
m.display()
m.add(25)
# currying version
trace(m.add(25))

1
