############################################################
#
#    decorators
#
############################################################



class MyClass(object):
    def __init__(self, color):
        self.color = color

    def bar(self, f):
        def enhance(x):
            f(x)
            print self.color, x
        return enhance

    def bar(self, f):
        def enhance(x):
            f(x)
            print self.color, x
        return enhance
        
x = MyClass("red")
y = MyClass("blue")


@x.bar
def f(n):
    print "f()", n
 
@y.bar
def g(n):
    print "g()", n
 
 
x.bar(f)(4)
f(5)
g(6)

1
