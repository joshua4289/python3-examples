import os

os.system('mkdir myrepo')
os.chdir('myrepo')


os.system('git init')
os.system('echo "hello world" > hello.txt')
os.system('git add hello.txt') 
os.system('git status')
os.system('git commit -m "added hello.txt"')
os.system('git status')
os.system('git log')
os.system('git show')
password = raw_input("Enter password: ")
repo = raw_input("Enter repo: ")
cmd = "git remote add origin https://seddon-software:{}@github.com/seddon-software/{}.git".format(password, repo)
os.system(cmd)
os.system('git remote -v')
os.system('git push -u origin master')

